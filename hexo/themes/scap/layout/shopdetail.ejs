<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SCAP Goods</title>
    <link rel="stylesheet" href="<%= url_for('css/hero.css') %>">
    <link rel="stylesheet" href="<%= url_for('css/shopdetail.css') %>">
    <link 
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@400;700&display=swap" 
      rel="stylesheet"
    >

</head>
<body>
  <%- partial('_partial/header') %> <!-- Header partial, as per your setup -->
    <section class="hero">
      <img src="<%= site.data.home.hero_image %>" alt="Hero Image">
      <div class="hero-text">
        <h1>SCAP Collection</h1>
        <p>SCAP Official Shop</p>
      </div>
    </section>
    <section class="product-grid">
      <% 
        var cardType = page.cardtype; 
        var shopData = site.data.shop[cardType];
      %>
      <% if (shopData && shopData.length) { %>
      <%- partial('_partial/shopdetailcard', { cards: shopData }) %>
      <% } %>
      
    </section>
    <%- partial('_partial/footer') %> <!-- Footer partial -->
    <script src="<%= url_for('js/hero.js') %>"></script>
    <script src="<%= url_for('js/shopdetail.js') %>"></script>

</body>
</html>