
<link rel="stylesheet" href="<%= url_for('css/player.css') %>">
<!-- Redesigned Music Player -->
<div class="music-player">
    <div class="album-art">
        <img src="" alt="Album Art"> <!-- Updated via JS -->
    </div>
    <div class="track-info">
        <h4 class="title"></h4> <!-- Updated via JS -->
        <div class="description">
            <div class="marquee-content">
                <span class="desc-text"></span> <!-- Updated via JS -->
                <span class="desc-text"></span> <!-- Duplicate for seamless loop -->
            </div>
        </div>
    </div>
    <button class="player-btn play-pause" aria-label="Play" aria-pressed="false">
    <!-- 播放：三角形 -->
    <svg class="icon play-icon" viewBox="0 0 24 24" aria-hidden="true">
        <polygon points="8,5 19,12 8,19"></polygon>
    </svg>
    <!-- 暂停：双竖杠 -->
    <svg class="icon pause-icon" viewBox="0 0 24 24" aria-hidden="true">
        <rect x="7" y="5" width="4" height="14"></rect>
        <rect x="13" y="5" width="4" height="14"></rect>
    </svg>
    </button>

</div>
<script src="<%= url_for('js/player.js') %>"></script>