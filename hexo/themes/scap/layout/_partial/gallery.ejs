<link rel="stylesheet" href="<%= url_for('css/pinterest.css') %>">
<link 
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@400;700&display=swap" 
      rel="stylesheet"
>
  <div class="gallery" id="gallery">
    <% cards.forEach(function(gallery_card) { %>
      <a class="card" href="<%= gallery_card.img %>" data-fancybox="gallery" data-caption="<%= gallery_card.title %> - <%= gallery_card.description %>">
          <div class="content" style="background-image: url('<%= gallery_card.img %>');"></div>
          <div class="description"><%= gallery_card.description %></div>
      </a>
    <% }); %>
  </div>
  <script src="<%= url_for('js/pickcolor.js') %>"></script>
  <script src="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.umd.js"></script>
  <script src="<%= url_for('js/endlessflow.js') %>"></script>
