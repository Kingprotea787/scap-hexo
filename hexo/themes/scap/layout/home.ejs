<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= config.title || 'SCAP Anime' %></title>
  <link rel="stylesheet" href="<%= url_for('css/hero.css') %>">
  <link rel="stylesheet" href="<%= url_for('css/textcard.css') %>">
</head>
<body>
  <%- partial('_partial/header') %> <!-- Header partial, as per your setup -->
  <section class="hero">
    <img src="<%= site.data.home.hero_image %>" alt="Hero Image">
    <div class="hero-text">
      <h1><%= config.title %></h1>
      <p><%= site.data.home.hero_subtitle %></p>
    </div>
  </section>

  <section id="about">
    <h2 class="section-title">About Us</h2>
    <% if (site.data.home.textcard && site.data.home.textcard.length) { %>
      <%- partial('_partial/textcardL', { cards: site.data.home.textcard.slice(0, 1) }) %>
    <% } %>
  </section>

  <section id="event">
    <h2 class="section-title">event</h2>
    <% if (site.data.home.textcard && site.data.home.textcard.length) { %>
      <%- partial('_partial/textcardR', { cards: site.data.home.textcard.slice(1, 4) }) %>
    <% } %>
  </section>

  <section id="music">
    <h2 class="section-title">Music</h2>
    <% if (site.data.home.cards && site.data.home.cards.length) { %>
      <%- partial('_partial/carousel', { cards: site.data.home.cards }) %>
    <% } %>
  </section>

  <section id="goods">
    <h2 class="section-title">Production / 创作</h2>
    <% if (site.data.home.textcard && site.data.home.textcard.length) { %>
      <%- partial('_partial/textcardL', { cards: site.data.home.textcard.slice(4, 6) }) %>
    <% } %>
  </section>
  <section id="partner">
    <h2 class="section-title">合作社团</h2>
    <% if (site.data.home.textcard && site.data.home.textcard.length) { %>
      <%- partial('_partial/textcardR', { cards: site.data.home.textcard.slice(6, 8) }) %>
    <% } %>
  </section>

  <%- partial('_partial/player') %> 

  <%- partial('_partial/footer') %> <!-- Footer partial -->

  <script src="<%= url_for('js/hero.js') %>"></script>
  
</body>
</html>