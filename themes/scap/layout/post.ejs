<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= config.title || 'SCAP Anime' %></title>
  <link rel="stylesheet" href="<%= url_for('css/post.css') %>">
</head>
<body>
<%- partial('_partial/header') %> <!-- Header partial, as per your setup -->

<article class="apple-news-style">
  <div class="hero">
    <% if (page.banner) { %>
      <img src="<%= page.banner %>" alt="Banner Image" class="hero-image">
    <% } %>
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1 class="title"><%= page.title %></h1>
      <p class="subtitle"><%= page.subtitle || '' %></p>
      <div class="meta">
        <span class="author">By <%= page.author || config.author %></span>
        <span class="date"><%= page.date.format('MMMM D, YYYY') %></span>
      </div>
    </div>
</div>
  
  <section class="intro">
    <% if (page.excerpt) { %>
      <p class="lead"><%= page.excerpt %></p>
    <% } %>
  </section>
  
  <main class="body">
    <%- page.content %>
  </main>
  
  <%- partial('_partial/footer') %> <!-- Footer partial -->
</article>
<script src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/3.2.2/es5/tex-mml-chtml.js" async></script>
<script>
  MathJax = {
    tex: {
      inlineMath: [['$', '$'], ['\\(', '\\)']],
      displayMath: [['$$', '$$'], ['\\[', '\\]']],
      processEscapes: true
    },
    options: {
      skipHtmlTags: ['noscript', 'style', 'textarea', 'pre', 'code']
    }
  };
</script>
</body>
</html>

